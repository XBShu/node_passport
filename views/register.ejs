<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Nuevo Usuario
        </h1>
        <%- include('partials/messages.ejs') %>
        <form action="/users/register" method="POST">
            <div class="form-group">
                <label for="name">Nombre</label>
                <input
                    type="text"
                    id="name"
                    name="name"
                    class="form-control"
                    placeholder="Nombre"
                    value="<%= typeof name != 'undefined' ? name : '' %>"
                />
                <label for="apellidos"></label>
                <input 
                    type="text"
                    id="apellidos"
                    name="apellidos"
                    class="form-control"
                    placeholder="Apellidos"
                    value="<%= typeof apellidos != 'undefined' ? apellidos : '' %>"
                />
            </div>
            
            <div class="form-group">
                <label for="email">Email</label>
                <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    placeholder="Correo electronico"
                    value="<%= typeof email != 'undefined' ? email : '' %>"
                    />
            </div>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    placeholder="Contraseña"
                />
                <label for="password2"></label>
                <input
                    type="password"
                    id="password2"
                    name="password2"
                    class="form-control"
                    placeholder="Confirma Contraseña"
                />
            </div>
            <div class="form-group">
                <label for="empresa">Empresa</label>
                <input
                    type="text"
                    id="empresa"
                    name="empresa"
                    class="form-control"
                    placeholder="Nombre de empresa"
                    value="<%= typeof empresa != 'undefined' ? empresa : '' %>"
                />
            </div>
            <div class="form-group">
                <label for="cif">CIF/NIF</label>
                <input
                    type="text"
                    id="cif"
                    name="cif"
                    class="form-control"
                    placeholder="CIF o NIF de empresa"
                    value="<%= typeof cif != 'undefined' ? cif : '' %>"
                />
            </div>

            <div class="form-group">
                <label for="telefono">Número de telefono</label>
                <input 
                    type="text"
                    id="telefono"
                    name="telefono"
                    class="form-control"
                    value="<%= typeof telefono != 'undefined' ? telefono : '' %>"
                />
            </div>
            <div class="form-group">
                <label for="facturacion">Dirección de facturación</label>
                <input
                    type="facturacion"
                    id="facturacion"
                    name="facturacion"
                    class="form-control"
                    placeholder="Calle"
                    value="<%= typeof facturacion != 'undefined' ? facturacion : '' %>"
                />
                <label for="cp"></label>
                <input
                    type="text"
                    id="cp"
                    name="cp"
                    class="form-control"
                    placeholder="Código postal"
                    value="<%= typeof cp != 'undefined' ? cp : '' %>"
                />
                <label for="ciudad"></label>
                <input
                    type="text"
                    id="ciudad"
                    name="ciudad"
                    class="form-control"
                    placeholder="Ciudad"
                    value="<%= typeof ciudad != 'undefined' ? ciudad : '' %>"
                />
            </div>
            <div>
                <button type="submit" class="btn btn-primary btn-block">Solicitar Cuenta</button>
            </div>
        </form>
        <p class="lead mt-4">Ya tienes cuenta? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>